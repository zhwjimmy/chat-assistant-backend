# Chat Assistant Backend Environment Configuration
# Copy this file to .env and modify the values as needed

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=chat_assistant
DB_SSLMODE=disable

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# I18n Configuration
DEFAULT_LANGUAGE=en

# Graceful Shutdown
SHUTDOWN_TIMEOUT=30s

# Development Settings
GIN_MODE=debug
